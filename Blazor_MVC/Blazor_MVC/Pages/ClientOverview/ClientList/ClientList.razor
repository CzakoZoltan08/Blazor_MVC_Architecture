@page "/clients"

@inherits ClientListComponent

<h1>Client list</h1>

@if (Clients == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Mobile Phone Number</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var client in Clients)
            {
                <tr>
                    <td>@client.FirstName</td>
                    <td>@client.LastName</td>
                    <td>@client.Mobile</td>
                    <td>@client.Email</td>
                </tr>
            }
        </tbody>
    </table>
}

